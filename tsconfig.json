{
  // Based on https://github.com/tannerlinsley/react-query/blob/2b8d2af4d1d76d25c6d363db2ed0388ccbc1ccc0/tsconfig.json
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext", "dom"],
    "target": "es5",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["./src"]
}